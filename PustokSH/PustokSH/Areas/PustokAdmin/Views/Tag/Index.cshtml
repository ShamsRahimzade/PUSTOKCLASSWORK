@model PaginatedVM<Tag>
@{
    int count = 0;
}
<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Tags</h4>
                <a asp-action="Create"><button type="button" class="btn btn-success">Create</button></a>
                <div class="table-responsive pt-3">
                    <table class="table table-dark">
                        <thead>
                            <tr>
                                <th>
                                    No
                                </th>
                                <th>
                                    Name
                                </th>
                                <th>
                                    BooksTag
                                </th>
                                <th>
                                    Setting
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.items)
                            {
                                count++;

                                <tr>
                                    <td>
                                        @count
                                    </td>
                                    <td>
                                        @item.Name
                                    </td>
                                    <td>
                                        @item.bookTags.Count
                                    </td>
                                    <td>
                                        <a asp-action="update" asp-controller="Tag" asp-route-id="@item.Id" class="btn btn-warning btn-info"><i class="mdi mdi-grease-pencil"></i></a>
                                        <a asp-action="delete" asp-controller="Tag" asp-route-id="@item.Id" class="btn btn-danger btn-info"><i class="mdi mdi-delete-variant"></i></a>
                                        <a class="btn btn-primary"><i class="mdi mdi-arrow-top-right"></i></a>

                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <nav aria-label="Page navigation example">
                <ul class="pagination justify-content-center">
                    <li class="page-item @(Model.CurrentedPage<=1?"disabled":"")">
                        <a class="page-link  " asp-controller="tag" asp-action="index" asp-route-page="@(Model.CurrentedPage-1)" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>
                    @for (int i = 0; i < Model.TotalPage; i++)
                    {
                        <li class="page-item @(Model.CurrentedPage-1==i?"disabled":"")"><a class="page-link" asp-controller="tag" asp-action="index" asp-route-page="@(i+1)">@(i + 1)</a></li>
                    }
                    <li class="page-item @(Model.TotalPage<=Model.CurrentedPage?"disabled":"")">
                        <a class="page-link " asp-controller="tag" asp-action="index" asp-route-page="@(Model.CurrentedPage+1)" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
</div>