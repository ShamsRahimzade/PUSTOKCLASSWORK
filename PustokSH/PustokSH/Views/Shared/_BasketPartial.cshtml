   @model List<BasketItemVM>
<div class="cart-total">
    <span class="text-number">
        @Model.Count
    </span>
    <span class="text-item">
        Shopping Cart
    </span>
    <span class="price">
        £@Model.Sum(x=>x.Total)
        <i class="fas fa-chevron-down"></i>
    </span>
</div>
<div class="cart-dropdown-block">
  @foreach (var item in Model)
    {
        <div class=" single-cart-block ">
            <div class="cart-product">
                <a href="product-details.html" class="image">
                    <img src="~/assets/image/@item.Img" alt="">
                </a>
                <div class="content">
                    <h3 class="title">
                        <a href="product-details.html">
                           @item.Product
                        </a>
                    </h3>
                    <p class="price"><span class="qty">@item.Quantity ×</span> £@item.Price</p>
                    <button class="cross-btn">  <a asp-controller="basket" asp-action="removefrombasket" asp-route-id="@item.Id"> <i class="fa fa-times"></i></a>

        </button>
                </div>
            </div>
        </div>
    }



    <div class=" single-cart-block ">
        <div class="btn-block">
            <a asp-controller="basket" asp-action="index" class="btn">
                View Cart <i class="fas fa-chevron-right"></i>
            </a>
            <a href="checkout.html" class="btn btn--primary">
                Check Out <i class="fas fa-chevron-right"></i>
            </a>
        </div>
    </div>
</div>

